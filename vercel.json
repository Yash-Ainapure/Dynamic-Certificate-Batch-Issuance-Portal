{
  "version": 2,
  "builds": [
    {
      "src": "server/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/app.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ]
}